---
import PersonalProfileDescription from "../personalprofiledescription/PersonalProfileDescription.astro";
import PersonalProfileSubtitle from "../personalprofilesubtitle/PersonalProfileSubtitle.astro";
import PersonalProfileTitle from "../personalprofileTitle/PersonalProfileTitle.astro";


---

<section class="flex flex-col justify-center items-center min-h-screen px-4 bg-gray-100">
  <div class="w-full max-w-5xl rounded-xl border border-gray-300 bg-slate-500 backdrop-blur-md shadow-lg p-6">
    <!-- App Window Header -->
    <div class="flex w-full items-center space-x-2 mb-4 p-2 rounded-md">
      <span class="w-3 h-3 bg-red-400 rounded-full"></span>
      <span class="w-3 h-3 bg-yellow-400 rounded-full"></span>
      <span class="w-3 h-3 bg-green-400 rounded-full"></span>
    </div>

    <div class="flex flex-col md:flex-row items-start justify-between p-2 bg-slate-400">

      <!-- Left Section - Title -->
      <div class=" md:w-1/3 text-center md:text-left">
        <PersonalProfileTitle title="Tom Boberek" />
        <PersonalProfileSubtitle subtitle="Software Developer - Portfolio Website" />
      </div>

      <!-- Vertical Divider -->
      <div class="hidden md:block w-px bg-gray-500 mx-8 h-48"></div>

      <!-- Right Section - Description -->
      <div class=" md:w-2/3 text-center md:text-left">
        <PersonalProfileDescription description="Content Added Later">
      </div>
    </div>
  </div>
</section>